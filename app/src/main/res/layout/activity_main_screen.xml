<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.derek.videoconverter.MainScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <Button
            android:id="@+id/btn_Outputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="41dp"
            android:text="Outputs"
            android:layout_below="@+id/btn_Variable"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_Loops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Loops"
            android:layout_below="@+id/btn_Outputs"
            android:layout_alignStart="@+id/btn_Outputs" />

        <Button
            android:id="@+id/btn_If"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_Loops"
            android:layout_below="@+id/btn_Loops"
            android:layout_marginTop="42dp"
            android:text="If Statements" />

        <Button
            android:id="@+id/btn_Arrays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_If"
            android:layout_below="@+id/btn_If"
            android:layout_marginTop="35dp"
            android:text="Arrays" />

        <Button
            android:id="@+id/btn_Variable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btn_Outputs"
            android:layout_marginTop="42dp"
            android:text="Variables" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
